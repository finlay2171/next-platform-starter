/* Media Query für Bildschirme kleiner als 768px (typisch für Handys) */
@media (max-width: 768px) {

    .header-content {
        flex-direction: row; /* Logo und Toggle bleiben nebeneinander */
        justify-content: space-between; /* Platz dazwischen */
        padding: 10px 20px; /* Padding links/rechts für Header */
    }

    .logo {
        font-size: 1.5em;
    }

    /* Nav Toggle Button auf kleinen Bildschirmen anzeigen */
    .nav-toggle {
        display: block;
    }

    /* Hauptnavigation (main-nav) auf kleinen Bildschirmen verstecken und positionieren */
    .main-nav {
        position: absolute;
        top: 60px; /* Unter dem Header positionieren (Header Höhe ca. 60px) */
        left: 0;
        width: 100%; /* Volle Breite */
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        /* Standardmäßig versteckt: */
        transform: translateY(-100%); /* Oben aus dem Sichtfeld schieben */
        transition: transform 0.3s ease-in-out; /* Sanfte Animation */
        z-index: 999; /* Über dem Inhalt, aber unter dem Sticky Header */
    }

    /* Klasse, die per JavaScript hinzugefügt wird, um die Navigation anzuzeigen */
    .main-nav.nav-active {
        transform: translateY(0); /* Zurück ins Sichtfeld schieben */
    }

    .main-nav ul {
        flex-direction: column; /* Links untereinander */
        align-items: center; /* Links zentrieren */
        padding: 20px 0;
    }

    .main-nav ul li {
        margin: 10px 0; /* Vertikaler Abstand zwischen den Links */
    }

    .main-nav a {
        font-size: 1.2em;
        color: #333; /* Links im Menü dunkler */
    }
     .main-nav a::after {
        display: none; /* Unterstrich-Effekt im mobilen Menü deaktivieren */
    }

    /* Hero Section Anpassungen */
    .hero-section {
        height: 60vh; /* Höhe reduzieren */
        padding: 0 15px;
    }
     .hero-content h1 {
         font-size: 2em; /* Schriftgröße anpassen */
     }
     .hero-content .subtitle {
         font-size: 1em;
     }

    /* Content Section Anpassungen */
     .content-section, .card-section, .image-teaser-section {
         padding: 40px 0; /* Padding anpassen */
     }
      .container {
          padding: 10px 15px; /* Padding links/rechts für Container */
      }

    /* Card Section Anpassungen */
    .card-container {
        grid-template-columns: 1fr; /* Eine Spalte auf Handys */
        gap: 20px; /* Abstand anpassen */
    }
     .card {
         width: 95%; /* Kartenbreite etwas weniger als 100% */
         margin: 0 auto; /* Karten zentrieren */
     }


     /* Teaser Section Anpassungen */
     .image-teaser-section {
         padding: 60px 0;
     }
      .teaser-content h2 {
          font-size: 2em;
      }
       .teaser-content p {
           font-size: 1em;
       }

    /* Footer Anpassungen */
    footer nav ul {
        flex-direction: column; /* Footer Links untereinander */
        margin-top: 10px;
    }
    footer nav ul li {
        margin: 5px 0;
    }

}
// Deine JavaScript-Datei

// Warten, bis das gesamte HTML-Dokument geladen ist
document.addEventListener('DOMContentLoaded', function() {

    // Wähle den Button zum Umschalten der Navigation aus
    const navToggle = document.querySelector('.nav-toggle');

    // Wähle das Navigationselement aus
    const mainNav = document.querySelector('.main-nav');

    // Überprüfe, ob beide Elemente gefunden wurden
    if (navToggle && mainNav) {

        // Füge einen Event-Listener zum Button hinzu, der auf 'click' reagiert
        navToggle.addEventListener('click', function() {
            // Wenn der Button geklickt wird, schalte die Klasse 'nav-active' beim mainNav um
            // Wenn 'nav-active' da ist, wird es entfernt, wenn nicht, wird es hinzugefügt
            mainNav.classList.toggle('nav-active');

            // Optional: Ändere das Icon des Buttons (z.B. von Hamburger zu X)
            // Hierfür müsstest du die Font-Awesome Klassen umschalten
            const icon = navToggle.querySelector('i');
            if (mainNav.classList.contains('nav-active')) {
                icon.classList.remove('fa-bars'); // Hamburger entfernen
                icon.classList.add('fa-times'); // X hinzufügen
            } else {
                icon.classList.remove('fa-times'); // X entfernen
                icon.classList.add('fa-bars'); // Hamburger hinzufügen
            }
        });

        // Optional: Schließe das Menü, wenn ein Link im mobilen Menü geklickt wird
        // Das ist nützlich, damit das Menü nach der Auswahl nicht offen bleibt
        const navLinks = mainNav.querySelectorAll('a');
        navLinks.forEach(link => {
            link.addEventListener('click', function() {
                if (mainNav.classList.contains('nav-active')) {
                    mainNav.classList.remove('nav-active'); // Menü schließen
                    // Optional: Icon zurücksetzen, falls geändert
                     const icon = navToggle.querySelector('i');
                     icon.classList.remove('fa-times');
                     icon.classList.add('fa-bars');
                }
                 // Bei Klick auf einen Link in der mobilen Ansicht springt die Seite zum Anker
                 // Wir verhindern das standardmäßige Verhalten nicht, damit der Sprung funktioniert
            });
        });

    } else {
        console.error("Nav Toggle Button oder Main Nav Element nicht gefunden!");
    }

});

// Hier könnten weitere JavaScript-Funktionen folgen...
// z.B. für eine Bildergalerie, Formularvalidierung, etc.
